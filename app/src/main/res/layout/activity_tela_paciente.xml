<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    android:padding="24dp"
    tools:context=".ui.activity.TelaPacienteActivity">

    <!-- Guidelines a 50% (meio) para usar como referência -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!-- TextView "Olá, paciente!" -->
    <TextView
        android:id="@+id/tvBoasVindas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Olá, paciente!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="600dp"/>

    <!-- TextView Email -->
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="16sp"
        android:textColor="#616161"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvBoasVindas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="600dp"/>

    <!-- TextView Idade -->
    <TextView
        android:id="@+id/tvIdade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Idade:"
        android:textSize="16sp"
        android:textColor="#616161"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="600dp"/>

    <!-- Chart Pressão -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chartPressao"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvIdade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="600dp"/>

    <!-- Chart Glicemia -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chartGlicemia"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/chartPressao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="600dp"/>

    <!-- Botão Inserir Dados -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnInserirDados"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Inserir Dados"
        android:textColor="#FFFFFF"
        android:backgroundTint="#66BB6A"
        android:icon="@android:drawable/ic_input_add"
        app:iconPadding="8dp"
        android:elevation="6dp"
        android:layout_marginTop="24dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/chartGlicemia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="600dp" />

    <!-- Botão Ver Histórico -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerHistorico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ver Histórico"
        android:textColor="#FFFFFF"
        android:backgroundTint="#9E9E9E"
        android:icon="@android:drawable/ic_menu_recent_history"
        app:iconPadding="8dp"
        android:elevation="6dp"
        android:layout_marginTop="16dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnInserirDados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="600dp" />

    <!-- Botão Logout -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:backgroundTint="#E53935"
        android:icon="@android:drawable/ic_lock_power_off"
        app:iconPadding="8dp"
        android:elevation="6dp"
        android:layout_marginTop="16dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnVerHistorico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="600dp" />

    <!-- Botão Sair -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSair"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sair"
        android:textColor="#FFFFFF"
        android:backgroundTint="#757575"
        android:icon="@android:drawable/ic_menu_close_clear_cancel"
        app:iconPadding="8dp"
        android:elevation="6dp"
        android:layout_marginTop="16dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnLogOut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="600dp" />

</androidx.constraintlayout.widget.ConstraintLayout>